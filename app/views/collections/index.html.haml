%div{:class => "centre"}
  = link_to 'New Collection', new_collection_path, :class => "btn btn-info"
  %h4 Listing your collections
  - @collections.each do |collection|
    %div
      %h4=collection.name

    = link_to 'Show', collection, :class => "btn btn-default"
    = link_to 'Edit', edit_collection_path(collection), :class => "btn btn-default"
    = link_to 'Destroy', collection, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-default"
