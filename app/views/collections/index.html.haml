%div{:class => "centre"}
  %div{:class => "gap1"}
  %h1 Your Collections
  %div{:class => "document_header_grid"}
    -# filter box options
    %div{:class => "action"}
      = link_to 'New Collection', new_collection_path, :class => "btn btn-info width_block special_text"
  %div{:class => "gap1"}

  %div{:class => 'edit_user_grid'}
    - @collections.each do |collection|
      %div{:class => 'collection_card'}
        %h4=collection.name
        %p=collection.description
        = link_to 'View Items', collection, :class => "btn btn-info special_text"
        = link_to 'Edit', edit_collection_path(collection), :class => "btn btn-info special_text"
        %span
          = button_to 'Destroy', collection, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-warning special_text", :form_class=>'inline_style'
