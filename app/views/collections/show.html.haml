%div{:class => "centre"}
  %h4= @collection.name

  -@queries.each do |query|
    %div
      - params = ActiveSupport::JSON.decode(query.query)
      = params.to_s
      %br
      = link_to 'Run Query', advanced_path(params), :class => "btn btn-default"
      = link_to 'Delete', query, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-warning"
  %br
  %br
  = link_to 'export collection', export_path(id: @collection.id , export_type: 'collection'), :class => "btn btn-default"

  %div{:class => "results_grid"}
    -#sections
    - @sections.each do |section|
      %div{:class => 'result'}
        %h5= section.section_number
        %h5= section.section_name
        %br
        = section.content[0..1500].html_safe
      %div{:class => 'details'}
        = section.document.country
        %br
        = section.document.year
        %br
        = section.document.cycle.ordinalize + ' cycle'
        %br
        = Document::DOCUMENT_TYPES[section.document.document_type]
        %br
        = link_to 'Original', section.document.url, target: '_blank', :class => "btn btn-default"
        - section.page_number == nil ? number = 0 : number = section.page_number
        = link_to 'Jump To Page', section.document.url + '#page=' +  number.to_s, :class => "btn btn-default"
        = link_to 'remove from collection', remove_collection_path(section_number: section.section_number,document_id: section.document.id , id: @collection.id), :class => "btn btn-warning"
