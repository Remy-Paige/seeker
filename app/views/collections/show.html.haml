%div{:class => "centre"}
  %h3
    Collection:
    = @collection.name

  %h4 Queries:
  -@queries.each do |query|
    %div
      - params = ActiveSupport::JSON.decode(query.query)
      - params['keyword'].each_key do |key|
        %span{:class => 'title'}=params['query_type'][key][0] +':'
        =params['filter_type'][key][0] + ':'
        -params['keyword'][key].each do |word|
          =word
        %br

      = link_to 'Run Query', advanced_path(params), :class => "btn btn-default"
      = link_to 'Delete', query, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-default"
      %br
      %br
  %br
  %br

  %h4 Sections:
  = link_to 'Export Sections', export_path(id: @collection.id , export_type: 'collection'), :class => "btn btn-default"

  %div{:class => "results_grid"}
    -#sections
    - @sections.each do |section|
      %div{:class => 'result'}
        %h5= section.section_number
        %h5= section.section_name
        %br
        = section.content[0..1500].html_safe
      %div{:class => 'details'}
        = section.document.country
        %br
        = section.document.year
        %br
        = section.document.cycle.ordinalize + ' cycle'
        %br
        = Document::DOCUMENT_TYPES[section.document.document_type]
        %div{:class => "right_box"}
          = link_to 'Original', section.document.url, target: '_blank', :class => "btn btn-default right_button"
          %br
          - section.page_number == nil ? number = 0 : number = section.page_number
          = link_to 'Jump to Page', section.document.url + '#page=' +  number.to_s, :class => "btn btn-default right_button"
          %br
          %br
          %br
          %br
          = link_to 'Remove from Collection', remove_collection_path(section_number: section.section_number,document_id: section.document.id , id: @collection.id), :class => "btn btn-default right_button"
