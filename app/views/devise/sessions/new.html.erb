<div class ="log_in_centre">

    <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div><%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email' %></div>
          <div><%= f.input :password, required: false, label: false, placeholder: 'Password' %></div>
          <div><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", :class => 'btn btn-info special_text' %>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
</div>