%center
  %h1 Welcome to the Seeker Project
  %br
  = form_tag search_path, method: :get do
    - @available_queries.each do |query|
      = hidden_field_tag 'available_queries', query, class: 'available_queries'
    %table#search_form{ style: "width: 20%" }
      %tr
        %td{ colspan: 3 }= text_field_tag :q, nil, style: "width:100%"
    %br
    = link_to 'Narrow your search criteria', '#', id: 'add_search'
    %br
    %br
    = submit_tag 'Search documents'

  %br
  - if user_signed_in?
    = link_to 'Manage Documents', documents_path
  - else
    = link_to 'Login', new_user_session_path
