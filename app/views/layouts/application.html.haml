!!!
%html
  %head

    %title Seeker
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'https://use.fontawesome.com/releases/v5.5.0/css/all.css', integrity:'sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU', crossorigin:'anonymous'
    = csrf_meta_tags
  %body
    = include_gon(:init => true)
    %header{:class => "navbar navbar-fixed-top navbar-inverse", :id => "navbar"}
      %div{:class => "container"}
        //= link_to 'search', root_path, :class => "navbar-brand"
        = link_to 'Search', advanced_path, :class => "navbar-brand"
        %nav{:class => "navbar-right"}
          - if user_signed_in? && current_user.admin?
            = link_to 'Documents', documents_path, :class => "navbar-brand"
            = link_to 'Users', users_path, :class => "navbar-brand"
            = link_to 'Tickets', user_tickets_path, :class => "navbar-brand"
            = link_to 'Saved', collections_path, :class => "navbar-brand"
            //TODO: fix - this looks gross
            = link_to image_tag('icon.png', :alt => "brand"), user_path(current_user), :class => "navbar-brand"
            = link_to  'Logout',  destroy_user_session_path, method: :delete, :class => "btn btn-default navbar-btn"
          - elsif user_signed_in? && !current_user.admin?
            = link_to 'Documents', documents_path, :class => "navbar-brand"
            = link_to 'Tickets', user_tickets_path, :class => "navbar-brand"
            = link_to 'Saved', collections_path, :class => "navbar-brand"
            = link_to image_tag('icon.png', :alt => "brand"), user_path(current_user), :class => "navbar-brand"
            = link_to 'Logout',  destroy_user_session_path, method: :delete, :class => "btn btn-default navbar-btn"
          - else
            = link_to 'Documents', documents_path, :class => "navbar-brand"
            //devise/sessions#new
            = link_to 'Login', new_user_session_path, :class => "btn btn-default navbar-btn"
            //devise/registrations#new
            = link_to 'Sign Up', new_user_registration_path, :class => "btn btn-default navbar-btn"

    %div{:id => "flash"}
    - if notice.present?
      = render partial: "shared/notice_banner"
    %div{:class => "grid"}
      %p#alert= alert
      = yield
