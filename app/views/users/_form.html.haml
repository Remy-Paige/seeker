%div{:class => "full"}
= simple_form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  = f.input :email, placeholder: 'Email', label: false
  = f.input :password, placeholder: 'Password', as: :password, label: false
  = f.input :password_confirmation, placeholder: 'Password confirmation', as: :password, label: false

  .actions
    = f.submit 'Save'
